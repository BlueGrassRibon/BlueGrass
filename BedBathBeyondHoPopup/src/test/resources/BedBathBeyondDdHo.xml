<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="bedbathandbeyond Automation Script" parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <!--parameter name="CloudEnvName" value="Saucelabs"/>-->
    <parameter name="os" value="windows"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="60.0"/>
    <parameter name="url" value="https://www.bedbathandbeyond.com/"/>

    <test name = "bedbathandbeyond Home" enabled="true">
        <classes>
            <class name="testHoverOverBedBath.TestHoverOver"/>

           <class name="testPopupHandelingBedBathBeyond.TestHandlePopUp"/>
            <class name="testPopupHandelingBedBathBeyond.TestSignInAndPopUpHandling"/>
        </classes>
    </test>
    <test name="bedbathandbeyond SignIn with googleSheet" enabled="false">
        <classes>
            <class name="testGoogleSheetReader.TestGoogleSheetReader"/>
        </classes>
    </test>
    <test name="bedbathandbeyond SignIn with xlsSheet" enabled="true">
        <classes>
            <class name="testDataProviderUtilityWithXlsReader.TestLogInByXls"/>
        </classes>
    </test>



</suite>