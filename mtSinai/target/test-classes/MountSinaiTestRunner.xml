<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="MountSinai Automation Script " parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
<!--
    <parameter name="cloudEnvName" value="sauceLa"/>
-->
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="60.0"/>
    <parameter name="url" value="https://www.mountsinai.org/"/>

    <test name = "MountSinai Home" enabled="false">
        <classes>
            <class name="testHomePage.TestMainPage"/>
        </classes>
    </test>
    <test name="MountSinai HoverOver" enabled="true">
        <classes>
            <class name="testHomePage.TestHoverOver"/>
        </classes>
    </test>
    <test name="MountSinai Search" enabled="false">
        <classes>
            <class name="testHomePage.TestSearch"/>
        </classes>
    </test>
    <test name="MountSinai Multiple Search by Creating Method" enabled="false">
        <classes>
            <class name="testHomePage.TestSearchDoctor"/>
        </classes>
    </test>
    <test name="MountSinai Multiple Search by Creating GetterSetter Method" enabled="false">
        <classes>
            <class name="testHomePage.TestSearchDepartment"/>
        </classes>
    </test>
    <test name="MountSinai SignIn with googleSheet" enabled="false">
        <classes>
            <class name="testGoogleSheetReader.TestGoogleSheetReader"/>
        </classes>
    </test>
    <test name="MountSinai SignIn with xlsSheet" enabled="false">
        <classes>
            <class name="testDataProviderUtilityWithXlsReader.TestLogInByXls"/>
        </classes>
    </test>


</suite>